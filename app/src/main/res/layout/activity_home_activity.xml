<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context="com.example.cs175group1.workout_buddy.HomeActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_above="@+id/questBtn"
            android:layout_alignLeft="@+id/questBtn"
            android:layout_alignStart="@+id/questBtn"
            android:layout_marginBottom="88dp"
            android:layout_marginEnd="38dp"
            android:background="#3090C7"
            android:text="Log Out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/workoutBtn"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp"
            android:layout_marginEnd="38dp"
            android:background="#3090C7"
            android:text="Workout"
            app:layout_constraintBottom_toTopOf="@+id/logoutBtn"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/questBtn"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/workoutBtn"
            android:layout_alignStart="@+id/workoutBtn"
            android:layout_below="@+id/workoutBtn"
            android:layout_marginBottom="88dp"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="38dp"
            android:background="#3090C7"
            android:text="Questionnaire"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/logoutBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/homeBtn"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_above="@+id/questBtn"
            android:layout_alignLeft="@+id/questBtn"
            android:layout_alignStart="@+id/questBtn"
            android:layout_marginBottom="37dp"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="38dp"
            android:background="#3090C7"
            android:text="Home"
            app:layout_constraintBottom_toTopOf="@+id/questBtn"
            app:layout_constraintEnd_toStartOf="@+id/workoutBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="237dp"
            android:layout_height="101dp"
            android:layout_marginEnd="120dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="125dp"
            android:text="Choose Your Activity"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
