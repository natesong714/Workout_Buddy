<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Pull Day"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp" />

    <Button
        android:id="@+id/mondayBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#659EC7"
        android:text="Bent Over Barbell Rows
3 sets of 10 reps" />

    <Button
        android:id="@+id/tuesdayBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#3BB9FF"
        android:text="Weighted Pull-ups
3 sets of 8 reps" />

    <Button
        android:id="@+id/wednesdayBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#82CAFF"
        android:text="Rack Chins
3 sets of 8 reps" />

    <Button
        android:id="@+id/thursdayBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#659EC7"
        android:text="Face Pulls
3 sets of 15 reps" />

    <Button
        android:id="@+id/fridayBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#3BB9FF"
        android:text="Barbell Bicep Curls
3 sets of 10 reps" />

    <Button
        android:id="@+id/saturdayBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#82CAFF"
        android:text="Seated Dumbbell Curl
3 sets of 10 reps" />

    <Button
        android:id="@+id/sundayBtn"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff" />
</LinearLayout>
